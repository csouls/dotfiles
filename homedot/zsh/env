# Color settins
export CLICOLOR=1

export EDITOR=vim

# PATH setting
export PATH=~/.rbenv/bin:~/.gem/bin:~/bin/:/usr/local/bin:$PATH #for Ruby
export PATH=~/.cabal/bin:$PATH #for Haskell
export PATH=$PATH:~/bin/FDK/Tools/osx # for makeotf

# AWS
if [ -x /usr/libexec/java_home ]; then
  export JAVA_HOME=`/usr/libexec/java_home`
fi
export PATH=$PATH:$JAVA_HOME/bin

export EC2_REGION=ap-northeast-1
export EC2_HOME=/usr/local/ec2/ec2-api-tools-1.7.3.2
export PATH=$PATH:$EC2_HOME/bin

export AWS_RDS_HOME=~/bin/RDSCli-1.19.004
export PATH=$PATH:$AWS_RDS_HOME/bin # for RDS command line tools

export AWS_AUTO_SCALING_HOME=~/bin/AutoScaling
export PATH=$PATH:$AWS_AUTO_SCALING_HOME/bin

export AWS_CREDENTIAL_FILE=~/.aws/credentials/reserved-instances

# ios
export IOS_SIMULATOR_PATH="~/Library/Application Support/iPhone Simulator/"

# android
ANDROID_NDK=/usr/local/Cellar/android-ndk/r10d
export PATH=$PATH:${ANDROID_NDK}
export NDK_ROOT=${ANDROID_NDK}
export ANDROID_NDK_ROOT=${ANDROID_NDK}
ANDROID_SDK=/usr/local/Cellar/android-sdk/24.1.2
export PATH=$PATH:${ANDROID_SDK}:${ANDROID_SDK}/platform-tools
export ANDROID_SDK_ROOT=${ANDROID_SDK}
export ANT_ROOT=/usr/local/bin
which ccache > /dev/null 2>&1 && export NDK_CCACHE=`which ccache`
export CLASSPATH=${ANDROID_SDK}/platform-tools
export PATH=$PATH:${ANDROID_SDK}/tools

# cocos2d-x
export COCOS_CONSOLE_ROOT=~/lib/cocos2d-x/tools/cocos2d-console/bin
export PATH=$COCOS_CONSOLE_ROOT:$PATH

# Vagrant & Docker
export PATH=$PATH:/Applications/Vagrant/bin
export DOCKER_HOST="192.168.50.4:2375"

export PGDATA=/usr/local/var/postgres
