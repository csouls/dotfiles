# Color setting
export CLICOLOR=1

# make ruby
export RUBY_CONFIGURE_OPTS="--with-readline-dir=/usr/local/opt/readline:${RUBY_CONFIGURE_OPTS}"

# vim
export EDITOR="vim"

# Java
if [ -x /usr/libexec/java_home ]; then
  export JAVA_HOME="$(/usr/libexec/java_home)"
fi

# AWS
export EC2_REGION="ap-northeast-1"
export EC2_HOME="/usr/local/ec2/ec2-api-tools-1.7.3.2"
export AWS_RDS_HOME="${HOME}/bin/RDSCli-1.19.004"
export AWS_AUTO_SCALING_HOME="${HOME}/bin/AutoScaling"
export AWS_CREDENTIAL_FILE="${HOME}/.aws/credentials/reserved-instances"

# PostgreSQL
export PGDATA="/usr/local/var/postgres"

# ios
export IOS_SIMULATOR_PATH="~/Library/Application Support/iPhone Simulator/"

# android
ANDROID_NDK="/usr/local/Cellar/android-ndk-r10e/r10e"
export NDK_ROOT="${ANDROID_NDK}"
export ANDROID_NDK_ROOT="${ANDROID_NDK}"

ANDROID_SDK_DIR="/usr/local/Caskroom/android-sdk"
ANDROID_SDK="${ANDROID_SDK_DIR}/$(ls ${ANDROID_SDK_DIR} | tail -1)"
export ANDROID_HOME="${ANDROID_SDK}"
export ANDROID_SDK_ROOT="${ANDROID_SDK}"
which ccache > /dev/null 2>&1 && export NDK_CCACHE="$(which ccache)"
export CLASSPATH="${ANDROID_SDK}/platform-tools"

# GO
export GOPATH="${HOME}/src/go"
export GOROOT="${HOME}/lib/google-cloud-sdk/platform/google_appengine/goroot-1.8"
export GO15VENDOREXPERIMENT=1

# Yubikey
export SSH_AUTH_SOCK="${HOME}/.gnupg/S.gpg-agent.ssh"

# PATH
export PATH="${PATH}:${HOME}/bin"      # tools
export PATH="${PATH}:${JAVA_HOME}/bin" # Java

## languages
export PATH="${PATH}:/usr/local/bin"     # Homebrew
export PATH="${PATH}:${HOME}/.rbenv/bin" # Ruby
export PATH="${PATH}:${HOME}/.cabal/bin" # Haskell
export PATH="${PATH}:$GOPATH/bin"        # Golang

## AWS
export PATH="${PATH}:$EC2_HOME/bin"               # ec2-api-tools
export PATH="${PATH}:$AWS_RDS_HOME/bin"           # RDS command line tools
export PATH="${PATH}:$AWS_AUTO_SCALING_HOME/bin"  # AWS auto scaling tools

## Android
export PATH="${PATH}:${ANDROID_NDK}"
export PATH="${PATH}:${ANDROID_SDK}"
export PATH="${PATH}:${ANDROID_SDK}/tools"
export PATH="${PATH}:${ANDROID_SDK}/platform-tools"

## GCP
export PATH="${PATH}:${HOME}/lib/google-cloud-sdk/platform/google_appengine/goroot-1.8/bin"
### Google Cloud SDK.
if [ -f "${HOME}/lib/google-cloud-sdk/path.zsh.inc" ]; then source "${HOME}/lib/google-cloud-sdk/path.zsh.inc"; fi
### Enables shell command completion for gcloud.
if [ -f "${HOME}/lib/google-cloud-sdk/completion.zsh.inc" ]; then source "${HOME}/lib/google-cloud-sdk/completion.zsh.inc"; fi

