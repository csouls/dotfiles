[core]
  quotepath = false
  editor = vim
	excludesfile = ~/.gitignore
	untrackedCache = true
[color]
  status = auto
  diff = auto
  branch = auto
[merge]
  ff = false
  tool = vimdiff
[fetch]
  prune = true
[pull]
  rebase = true
[push]
  default = simple
[grep]
  lineNumber = true
[pager]
  log  = diff-highlight | less -x4
  show = diff-highlight | less -x4
  diff = diff-highlight | less -x4
  grep = false
[rebase]
  autosquash = true
[help]
  autocorrect = 1
