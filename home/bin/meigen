#!/usr/bin/env ruby
require 'rubygems'
require 'mechanize'
require 'colorize'

m = Mechanize.new
m.get('http://www.meigensyu.com/quotations/view/random/') do |random|
  m.get(random.uri) do |page|
    puts page.parser.xpath('//div[@class="meigenbox"]/div[@class="text"]').text.colorize(:green)
  end
end
